modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = "streamlit run app.py --server.address 0.0.0.0 --server.port 5000"

[workflows]
runButton = "Run Stock App"

[[workflows.workflow]]
name = "Run Stock App"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt && streamlit run app.py --server.address 0.0.0.0 --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
